<div class="container">
    <h5>Accepted Booking Requests Logs per Taxis</h5>
    <ul class="collection" style="width:70%; margin:auto">
    <%= for {taxi_name, number_of_bookings} <- @tuples do %>
         <li class="collection-item">
            <b style = "padding-right:10px">Taxi username : </b> <%= taxi_name %><br/>
            <b style = "padding-right:10px">Driver Names : </b> <%=  %><br/>
            <b style = "padding-right:10px">Car Numberplate : </b> NP <%= Enum.random(000..999) %> TZ<br/>
            <b style = "padding-right:10px">Car Brand/Model : </b> <%= 
            ["Audi SEDANS A3", "Audi COUPES R8", "Audi SUV's A3", "Toyota Prius", "Toyota RAV4"]
            |>Enum.at(Enum.random(0..4))
            %><br/>
            <b style = "padding-right:10px">Total booking done : </b> <%= number_of_bookings %><br/>
            <b style = "padding-right:10px">Total Amount Collected (in EUR) : </b> 
            <%= 
            Enum.random(300..5610) 
            %> EUR<br/>
            <div class="text-right">
                <a href="/" class = "btn" style = "background-color:orange"> Generate Invoice </a>
            </div>
         </li>
    <% end %>
    </ul>
</div>